<?xml version="1.0" encoding="utf-8"?>
<manifest
	xmlns:android="http://schemas.android.com/apk/res/android"
	package="cz.czechitas.todo">

	<application
		android:name=".TodoApplication"
		android:icon="@mipmap/ic_launcher"
		android:label="@string/app_name"
		android:theme="@style/Theme.Todo.Light">

		<activity
			android:name=".activity.TaskListActivity"
			android:label="@string/app_name">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>

		<activity
			android:name=".activity.TaskDetailActivity"
			android:label="@string/title_task_detail" />

		<meta-data android:name="AA_DB_NAME" android:value="todo.db" />
		<meta-data android:name="AA_DB_VERSION" android:value="1" />

	</application>
</manifest>
